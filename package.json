{
  "name": "ts-esm",
  "version": "1.0.0",
  "description": "ts-esm",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist",
  "files": [
    "dist",
    "!dist/**/*.js.map"
  ],
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/crashmax-dev/ts-esm#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/ts-esm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/ts-esm.git"
  },
  "scripts": {
    "dev:apps": "pnpm -r --parallel --filter=./apps/* run dev",
    "build:apps": "pnpm -r --filter=./apps/* run build",
    "dev:packages": "pnpm -r --parallel --filter=./packages/* run dev",
    "build:packages": "pnpm -r --filter=./packages/* run build",
    "test": "ava",
    "test:watch": "ava --watch",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --fix --ext ts .",
    "prebuild": "del-cli dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@crashmax/eslint-config": "^1.1.0",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^17.0.42",
    "ava": "^4.3.0",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "husky": "^8.0.1",
    "tsx": "^3.4.2",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
