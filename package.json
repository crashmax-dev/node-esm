{
  "name": "typescript-template",
  "version": "1.0.0",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist",
  "files": [
    "dist",
    "!dist/**/*.js.map"
  ],
  "homepage": "https://github.com/crashmax-dev/ts-esm#readme",
  "bugs": {
    "url": "https://github.com/crashmax-dev/ts-esm/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/ts-esm.git"
  },
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "dev": "tsc-watch --onSuccess \"node -r tsconfig-paths/register --inspect ./dist/index.js\"",
    "build": "tsc",
    "test": "ava",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --fix --ext ts src",
    "prebuild": "del-cli dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@crashmax/eslint-config": "^1.0.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^16.11.6",
    "ava": "^3.15.0",
    "del-cli": "^4.0.1",
    "husky": "^7.0.4",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "nonSemVerExperiments": {
      "nextGenConfig": true,
      "configurableModuleFormat": true
    },
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
