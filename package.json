{
  "name": "node-esm",
  "version": "1.0.0",
  "description": "node-esm",
  "type": "module",
  "scripts": {
    "dev:apps": "pnpm -r --parallel --filter=./apps/* run dev",
    "build:apps": "pnpm -r --filter=./apps/* run build",
    "dev:packages": "pnpm -r --parallel --filter=./packages/* run dev",
    "build:packages": "pnpm -r --filter=./packages/* run build",
    "test": "ava",
    "test:watch": "ava --watch",
    "format": "prettier --write --ignore-unknown **",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "^2.0.4",
    "@crashmax/tsconfig": "^1.0.2",
    "@types/node": "^18.11.0",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "husky": "^8.0.1",
    "tsx": "^3.10.3",
    "typescript": "^4.8.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "npm": "^7.0.0",
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
}
